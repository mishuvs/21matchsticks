<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#b4a9d0"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vaibhav.a21matchsticks.Parent">

    <TextView
        style="@style/MainTexts"
        android:text="Game Started"
        android:textStyle="bold"/>

    <LinearLayout
        style="@style/Llayout">
        <TextView
            android:background="#ffd300"
            style="@style/Texts"
            android:text="Player 1"
            android:layout_marginRight="4sp"/>

        <TextView
            android:background="#95c200"
            android:id="@+id/player2_name"
            style="@style/Texts"
            android:text="Player 2"
            android:layout_marginRight="4sp"/>

    </LinearLayout>

    <LinearLayout
        style="@style/Llayout">

        <EditText
            style="@style/Texts"
            android:id="@+id/player1"
            android:inputType="number"
            android:text="0"
            android:textColor="#ffd300"/>

        <TextView
            style="@style/Texts"
            android:id="@+id/remaining"
            android:text="21"
            android:textColor="#ff0000"/>

        <EditText
            style="@style/Texts"
            android:id="@+id/player2"
            android:text="0"
            android:inputType="number"
            android:textColor="#95c200"/>

    </LinearLayout>

    <Button
        android:id="@+id/button"
        style="@style/MainTexts"
        android:layout_width="wrap_content"
        android:layout_marginBottom="30sp"
        android:text="Pick"
        android:onClick="startGame"/>

    <TextView
        style="@style/MainTexts"
        android:id="@+id/instructions"
        android:text="Instructions will appear here!"/>

</LinearLayout>
